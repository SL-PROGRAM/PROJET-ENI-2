{% if not is_granted("ROLE_ADMIN") %}
    <style>
        .admin{
            display: none;
        }
    </style>
{% endif %}
{{ form_start(form) }}
<div class="container">
    <form class="form-vertical" role="form">
        <div class="form-group">
            <div class="row justify-content">

                <div class="col">
                    <div class="row">
                        <div class="col">
                            {{ form_label(form.nom,"Nom :",{ 'label_attr': {'class': 'form-label'} }) }}
                        </div>
                        <div class="col">
                            {{ form_widget(form.nom,{ 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="col">
                            {{ form_errors(form.nom) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ form_label(form.prenom,"Prenom :",{ 'label_attr': {'class': 'form-label'} }) }}
                        </div>
                        <div class="col">
                            {{ form_widget(form.prenom,{ 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="col">
                            {{ form_errors(form.prenom) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ form_label(form.email,"Email :",{ 'label_attr': {'class': 'form-label'} }) }}
                        </div>
                        <div class="col">
                            {{ form_widget(form.email,{ 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="col">
                            {{ form_errors(form.email) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ form_label(form.pseudo,"Pseudo :",{ 'label_attr': {'class': 'form-label'} }) }}
                        </div>
                        <div class="col">
                            {{ form_widget(form.pseudo,{ 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="col">
                            {{ form_errors(form.pseudo) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ form_label(form.telephone,"Téléphone :",{ 'label_attr': {'class': 'form-label'} }) }}
                        </div>
                        <div class="col">
                            {{ form_widget(form.telephone,{ 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="col">
                            {{ form_errors(form.telephone) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ form_label(form.campus,"Campus :",{ 'label_attr': {'class': 'form-label'} }) }}
                        </div>
                        <div class="col">
                            {{ form_widget(form.campus,{ 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="col">
                            {{ form_errors(form.campus) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ form_label(form.imageFile,"Image :",{ 'label_attr': {'class': 'form-label'} }) }}
                        </div>
                        <div class="col">
                            {{ form_widget(form.imageFile,{ 'attr': {'class': 'form-control-file'} }) }}
                        </div>
                        <div class="col">
                            {{ form_errors(form.imageFile) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            {{ form_label(form.actif,"Actif :",{ 'label_attr': {'class': 'form-label admin'} }) }}
                        </div>
                        <div class="col">
                            {{ form_widget(form.actif,{ 'attr': {'class': 'admin'} }) }}
                        </div>

                    </div>
                    <div class="row">
                        <div class="col">
                            {{ form_label(form.roles,"Role(s) :",{ 'label_attr': {'class': 'form-label admin'} }) }}
                        </div>
                        <div class="col">
                            {{ form_widget(form.roles,{ 'attr': {'class': 'admin'} }) }}
                        </div>

                    </div>

                </div>
            </div>
        </div>
        <input type="submit" value="Valider" class="btn btn-primary"/>
    </form>


    {{ form_end(form) }}
    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-primary" href="{{ path('participant_index') }}">Retour</a>
    {% else %}
        <a class="btn btn-primary" href="{{ path('accueil') }}">Retour</a>
    {% endif %}

</div>
