{% extends 'base.html.twig' %}

{% block title %}Participant index{% endblock %}

{% block body %}
    <h1>Liste des participants</h1>
    <div class="container-fluid">
            <div class="pre-scrollable">
                <div class="table-responsive">
                    <table class="table table-striped table-fixed ">
                        <thead>
                        <tr>
                            <th>Prenom</th>
                            <th>Nom</th>

                            <th>Email</th>
                            <th>Telephone</th>

                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for participant in participants %}
                            <tr>
                                <td>{{ participant.prenom }}</td>
                                <td>{{ participant.nom }}</td>

                                <td>{{ participant.email }}</td>
                                <td>{{ participant.telephone }}</td>
                                
                                <td>
                                    <a class="btn btn-primary"
                                       href="{{ path('participant_show', {'id': participant.id}) }}">Voir</a>
                                    <a class="btn btn-primary"
                                       href="{{ path('participant_edit', {'id': participant.id}) }}">Editer</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="10">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
    </div>
    <a class="btn btn-primary" href="{{ path('participant_new') }}">Ajouter un participant</a><br/>
    <form action="{{ path('app_importCsvFile') }}" method="post" enctype="multipart/form-data">
        <input type="file" name="csv" value="" />
        <input type="submit" name="submit" value="Valider" class="btn btn-primary"/>
    </form>

{% endblock %}
