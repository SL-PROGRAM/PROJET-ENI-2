{% extends 'base.html.twig' %}

{% block title %}Participant index{% endblock %}

{% block body %}
    <h1>Liste des participants</h1>
    <div class="pre-scrollable">
        <div class="table-responsive">
            <table class="table table-striped table-fixed">
                <thead>
                <tr>
                    <th>Prenom</th>
                    <th>Nom</th>
                    <th>Pseudo</th>
                    <th>Email</th>
                    <th>Telephone</th>
                    <th>Roles</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for participant in participants %}
                    <tr>
                        <td>{{ participant.prenom }}</td>
                        <td>{{ participant.nom }}</td>
                        <td>{{ participant.pseudo }}</td>
                        <td>{{ participant.email }}</td>
                        <td>{{ participant.telephone }}</td>
                        <td>{{ participant.roles ? participant.roles|json_encode : '' }}</td>
                        {#  <td>{{ participant.token }}</td>#}
                        <td>
                            <a class="btn btn-primary" href="{{ path('participant_show', {'id': participant.id}) }}">Voir</a>
                            <a class="btn btn-primary" href="{{ path('participant_edit', {'id': participant.id}) }}">Editer</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="10">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <a class="btn btn-primary" href="{{ path('participant_new') }}">Ajouter un participant</a>

{% endblock %}
