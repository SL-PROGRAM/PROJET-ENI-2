

{{ form_start(form) }}
<table>
    <tr>
        <div class="form-group">
            <td>
                <strong>Nom de la sortie :</strong>
            </td>
            <td>
                {{ form_widget(form.nom) }}
            </td>
        </div>
        <div class="form-group">
            <td>
                <strong>Campus :</strong>
            </td>
            <td>
                {% if new is not defined %}
                    {{ sortie.campus }}
                {% endif %}
                {% if new is defined %}
                    {{ new.campus }}
                {% endif %}
            </td>
        </div>
    </tr>
    <tr>
        <div class="form-group">
            <td>
                <strong>Date et heure de sortie :</strong>
            </td>
            <td>
                {{ form_widget(form.dateHeureDebut) }}
            </td>
        </div>
        <div class="form-group">
            <td>
                <strong>Ville :</strong>
            </td>
            <td>
                {{ form_widget(form.ville) }}
            </td>
        </div>
    </tr>
    <tr>
        <div class="form-group">
            <td>
                <strong>Date limite d'inscription :</strong>
            </td>
            <td>
                {{ form_widget(form.dateLimiteInscription) }}
            </td>
        </div>
        <div class="form-group">
            <td rowspan="5">
                <strong>Lieu :</strong>
            </td>
            <td rowspan="5">
                <div id="form-lieu">
                    <div>
                        {{ form_widget(form.lieu) }}
                    </div>
                </div>
            </td>
        </div>
    </tr>
    <tr>
        <div class="form-group">
            <td>
                <strong>Nombre de place :</strong>
            </td>
            <td>
                {{ form_widget(form.nbInscriptionMax) }}
            </td>
        </div>
    </tr>
    <tr>
        <div class="form-group">
            <td>
                <strong>Dur√©e :</strong>
            </td>
            <td>
                {{ form_widget(form.duree) }}
            </td>
        </div>
    </tr>
    <tr>
        <div class="form-group">
            <td rowspan="2">
                <strong>Description et information :</strong>
            </td>
            <td rowspan="2">
                {{ form_widget(form.infosSortie) }}
            </td>
        </div>
    </tr>

</table>
<div>
    {{ form_widget(form.Enregistrer) }}
    {{ form_widget(form.Publier) }}
    <a href="{{ path('accueil') }}" class="btn btn-primary">Annuler</a>

</div>


{{ form_end(form) }}


<style>
    .click-button{
        width: 50px;
        height: auto;
    }
</style>

{% block javascripts %}
    <script type="text/javascript">

        $addLieu = document.querySelector('div#add-lieu');
        $removeLieu = document.querySelector('div#remove-lieu');
        $formLieu = document.querySelector('div#form-lieu');
        $formLieuChild = document.querySelector('div#form-lieu>div');
        $listLieu = document.querySelector('div#list-lieu');
        $listLieuChild = document.querySelector('div#list-lieu>div');

        $codePostal = document.querySelector("#codePostal");
        $rue = document.querySelector("#rue");
        $latitude = document.querySelector("#latitude");
        $longitude = document.querySelector("#longitude");

        $elemDisparaitre = document.querySelectorAll(".disparaitre");
        $rowspan = document.querySelectorAll(".rowspanChange")



        function seeForm() {
            $formLieu.appendChild($formLieuChild)
            $listLieu.innerHTML = "";

            $elemDisparaitre.forEach($elem => {
                $elem.style.display = "none";
            });
            $rowspan.forEach($elem => {
                $elem.rowSpan = "5";
            })

        }

        function seelist() {

            $formLieu.innerHTML = "";
            $listLieu.appendChild($listLieuChild);
            $elemDisparaitre.forEach($elem => {
                $elem.style.display = "";
            });
            $rowspan.forEach($elem => {
                $elem.rowSpan = "1";
            })
        }


    </script>
{% endblock %}
