{% block title %}Sortie{% endblock %}

{% block body %}
    <h1>Sortie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom de la sortie :</th>
                <td>{{ sortie.nom }}</td>
            </tr>
            <tr>
                <th>Date et heure de la sortie :</th>
                <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date limite d'inscription :</th>
                <td>{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nombre de place :</th>
                <td>{{ sortie.nbInscriptionMax }}</td>
            </tr>
            <tr>
                <th>Durée :</th>
                <td>
                    {% if dureeJour == 1%}
                        {{ dureeJour }} jour et
                    {% elseif dureeJour > 1 %}
                        {{ dureeJour }} jours et
                    {% endif %}
                    {% if dureeJour <= 1%}
                        {{ dureeHour }} heure
                    {% elseif dureeHour > 1 %}
                        {{ dureeHour }} heures
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Description et infos :</th>
                <td>{{ sortie.infosSortie }}</td>
            </tr>
            <tr>
                <th>Campus :</th>
                <td>{{ sortie.campus.nom }}</td>
            </tr>
            <tr>
                <th>Lieu :</th>
                <td>{{ sortie.lieu.nom }}</td>
            </tr>
            <tr>
                <th>Rue :</th>
                <td>{{ sortie.lieu.rue }}</td>
            </tr>
            <tr>
                <th>Code postal :</th>
                <td>{{ sortie.lieu.ville.codePostal }}</td>
            </tr>
            <tr>
                <th>Longitude :</th>
                <td>{{ sortie.lieu.longitude }}</td>
            </tr>
            <tr>
                <th>Latitude :</th>
                <td>{{ sortie.lieu.latitude }}</td>
            </tr>


        </tbody>
    </table>

    {{ include('sortie/liste_participant.html.twig') }}


    {% if app.user == sortie.organisateur %}

        <a href="{{ path('sortie_edit', {'id': sortie.id}) }}">Modifier</a>
        <a href="{{ path('sortie_delete', {'id': sortie.id}) }}">Annuler</a>
    {% endif %}
    <a href="{{ path('accueil') }}">retour à l'accueil</a>



{% endblock %}
