{% extends 'base.html.twig' %}

{% block title %}Entrez votre adresse e-mail{% endblock %}

{% block body %}
    <div class="row" style="text-align: center">
        <div class="col">
            <h1 class="h3 mb-3 font-weight-normal">Entrez votre adresse mail</h1>
            <form action="{{ path('sendPasswordEmail') }}" method="post">
                <label>
                    <input type="email" name="_email" id="inputEmail" class="form-control" required autofocus>
                </label>
                <input class="btn btn-primary" type="submit" value="Envoyer">
            </form>
        </div>
    </div>
{% endblock %}